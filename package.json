{
  "scripts": {
    "css": "node-sass --output-style expanded --indent-type tab --indent-width 1 --source-map true sass/style.scss -o .",
    "postcss": "postcss style.css --no-map --use autoprefixer -o style.css --autoprefixer.browsers=\"last 2 versions, ie >= 9\"",
    "watch": "node-sass --output-style expanded --indent-type tab --indent-width 1 --source-map true -w sass -r -o .",
    "zip": "git archive -o carlistings.zip --prefix=carlistings/ HEAD",
    "upload": "scp carlistings.zip root@gretathemes.com:/var/www/gretathemes.com/downloads/",
    "release": "npm run zip && npm run upload",
    "sync": "browser-sync start --proxy \"autolisting.test\" --files \"style.css\"",
    "check": "phpcs --standard=WordPress --extensions=php . > check.txt",
    "fix": "phpcbf --standard=WordPress --extensions=php ."
  }
}
